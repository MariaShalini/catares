<tr class="am_[% amenity.id %][% ' alt' IF (i % 2) %]">
  <td>[% amenity.name %]</td>
  <td><input type="checkbox" id="am_[% amenity.id %]_for_hall" name="am_[% amenity.id %]_for_hall"[% ' checked' IF amenity.for_hall %]></td>
  <td><input type="checkbox" id="am_[% amenity.id %]_for_room" name="am_[% amenity.id %]_for_room"[% ' checked' IF amenity.for_room %]></td>
  <td><input type="text" name="am_[% amenity.id %]_rate" size="8" value="[% amenity.rate %]"></td>
</tr>
